<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE logback>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date{HH:mm:ss.SSS} [%thread] [%-5level %logger{15}#%line %msg\n]</pattern>
        </encoder>

    </appender>

    <logger name="testgroup.crud_spring_hibernate">
        <level value = "debug"/>
    </logger>

    <logger name="org.springframework">
        <level value = "info"/>
    </logger>

    <root>
        <level value="error"/>
        <append-ref ref="STDOUT"/>
    </root>
</configuration>